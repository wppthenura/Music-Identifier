{
  "manifest_version": 3,
  "name": "Music Detector",
  "version": "1.0",
  "description": "Detects music playing on the current tab",
  "permissions": ["tabCapture", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
